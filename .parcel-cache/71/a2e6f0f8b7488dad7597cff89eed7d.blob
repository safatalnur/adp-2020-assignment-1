@import url("https://fonts.googleapis.com/css?family=Merriweather:100, 200, 300, 300i, 400, 400i, 700");

.bodyContainer {
      background: linear-gradient(to right, #ffc371, #ff5f6d);
      height: 100vh;
      width: 100%;
      text-align: center;
}

.bodyContainer h1 {
      text-decoration: underline;
      text-transform: uppercase;
      padding-top: 20%;
}

.bodyContainer p {
      font-size: 20px;
}

.weatherBodyContainer {
      background: linear-gradient(to right, #ffc371, #ff5f6d);
      height: 100vh;
      width: 100%;
      display: grid;
      grid-template-columns: 40% 60%;

}

.weather_data {
      display: grid;
      grid-template-columns: auto;
      justify-content: center;
      
}

.weather_key {
      color: black;
      font-family: "Merriweather", sans-serif;
      font-weight: 700;
}

.weather_value {
      color: white;
      font-weight: 100;
      font-style: italic;
      padding-left: 10px;
}

.weather_value img {
      width: 100px;
}

.cityName {
      text-align: center;
}

