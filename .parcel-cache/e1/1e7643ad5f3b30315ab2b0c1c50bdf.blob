.bodyContainer {
      background: linear-gradient(to right, #ffc371, #ff5f6d);
      height: 100vh;
      width: 100%;
      text-align: center;
}

.bodyContainer h1 {
      text-decoration: underline;
      text-transform: uppercase;
      padding-top: 20%;
}

.bodyContainer p {
      font-size: 20px;
}

.weatherBodyContainer {
      background: linear-gradient(to right, #ffc371, #ff5f6d);
      height: 100vh;
      width: 100%;
      display: grid;
      grid-template-columns: 40% 60%;

}

.weather_data {
      
}

.weather_key {
      color: black;
      font-family: "Merriweather", sans-serif;
      font-weight: bolder;
}

.weather_value {
      color: black;
      font-weight: 200;
}

